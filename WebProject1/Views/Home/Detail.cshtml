@{
    ViewData["Title"] = "Detail Page";
    DateTime now = DateTime.Now;
}
@model SelectedMemberModel

<h2 style="text-align:center">User Profile Card</h2>

<div class="card">
  <img src="@Model.PhotoLarge" alt="John" style="width:100%">
  <h1>@Model.Name @Model.LastName</h1>
  <p class="title">@Model.Email</p>
  <p>@Model.Street, @Model.City, @Model.State, @Model.PostCode</p>
 
  <p>@Model.Dob.Substring(0,10)</p>
</div>
